Menu:
    Screen:
        name: "main"
        GridLayout:
            spacing: dp(10)
            padding: dp(5)
            cols: 1
            Button:
                font_size: dp(30)
                text: "Shopping List"
                on_release: root.go_list()
            Button:
                font_size: dp(30)
                text: "Add to list"
            Button:
                font_size: dp(30)
                text: "Update"
            Button:
                font_size: dp(30)
                text: "Synchronise"
                on_release: root.synchronise()


    Screen:
        name: "list"
        BoxLayout:
            orientation: "vertical"
            ScrollView:
                do_scroll_y: True

                GridLayout:
                    id: gridLayout
                    size_hint: 1, None
                    height: self.minimum_height
                    cols: 1
                    Label:
                        size_hint: 1, None
                        height: self.minimum_height
                        height: dp(80)
                        text: "Zone 1"
                    BoxLayout:
                        size_hint: 1, None
                        height: dp(80)
                        spacing: dp(10)
                        padding: dp(5)
                        orientation: "horizontal"
                        Button:
                            text: "marchewki"
                        Label:
                            size_hint: .3, 1
                            text: "3x"
                    BoxLayout:
                        size_hint: 1, None
                        height: dp(80)
                        spacing: dp(10)
                        padding: dp(5)
                        orientation: "horizontal"
                        Button:
                            text: "ogorki"
                        Label:
                            size_hint: .3, 1
                            text: "1x"
                    BoxLayout:
                        size_hint: 1, None
                        height: dp(80)
                        spacing: dp(10)
                        padding: dp(5)
                        orientation: "horizontal"
                        Button:
                            text: "jabka"
                        Label:
                            size_hint: .3, 1
                            text: "2x"
            Button:
                size_hint: 1, None
                height: dp(50)
                pos_hint: {"center_x":  0.5}
                text: "Back"
                on_release: root.go_main()
    Screen:
        name: "detail"