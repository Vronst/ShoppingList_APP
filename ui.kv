Menu:
    Screen:
        name: "main"
        GridLayout:
            spacing: dp(10)
            padding: dp(5)
            cols: 1
            Button:
                font_size: dp(30)
                text: "Shopping List"
                on_release: root.go_list()
            Button:
                font_size: dp(30)
                text: "Add to list"
            Button:
                font_size: dp(30)
                text: "Update"
            Button:
                font_size: dp(30)
                text: "Synchronise"
                on_release: root.synchronise()


    Screen:
        name: "list"
        BoxLayout:
            orientation: "vertical"
            ScrollView:
                do_scroll_y: True

                GridLayout:
                    id: gridLayout
                    size_hint: 1, None
                    height: self.minimum_height
                    cols: 1

            Button:
                size_hint: 1, None
                height: dp(50)
                pos_hint: {"center_x":  0.5}
                text: "Back"
                on_release: root.go_main()
    Screen:
        name: "detail"
        BoxLayout:
            orientation: "vertical"
            ScrollView:
                do_scroll_y: True
                id: detail_screen





            Button:
                size_hint: 1, None
                height: dp(70)
                pos_hint: {"center_x":  0.5}
                text: "Save"
                on_release: root.save_data()
            Button:
                size_hint: 1, None
                height: dp(50)
                pos_hint: {"center_x":  0.5}
                text: "Back"
                on_release: root.go_list_r()